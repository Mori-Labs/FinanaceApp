from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.common.keys import Keys
from selenium.webdriver.chrome.service import Service
from selenium.webdriver.common.alert import Alert
import time

# Set up the WebDriver
service = Service("C:\chromedriver.exe")  # Update path
options = webdriver.ChromeOptions()
driver = webdriver.Chrome(service=service, options=options)

# Open the website
driver.get("https://www.chennaisuperkings.com/login")

# Enter email
email_field = driver.find_element(By.XPATH, "//input[@formcontrolname='email']")
email_field.send_keys("7558107725")

# Enter password
password_field = driver.find_element(By.XPATH, "//input[@formcontrolname='password']")
password_field.send_keys("1977")

# Click submit
login_button = driver.find_element(By.ID, "login")
login_button.click()

# Handle the alert
time.sleep(2)
edit_button = driver.find_element(By.CLASS_NAME, "btn")
edit_button.click()
# alert = Alert(driver)
# alert.accept()
time.sleep(5)
# Try OTP input
for otp in ["1234", "5678"]:  # Replace with different OTP attempts
    otp_field = driver.find_element(By.NAME, "otp")  # Adjust if necessary
    otp_field.clear()
    otp_field.send_keys(otp)

    verify_button = driver.find_element(By.ID, "verifyOtp")  # Adjust ID if necessary
    verify_button.click()

    time.sleep(2)
    alert = Alert(driver)
    alert.accept()  # Close wrong OTP alert

# Close browser
driver.quit()
